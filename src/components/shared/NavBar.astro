---
const links = [
    { text: 'Listado', href: '/' },
    { text: 'Paginado', href: '/pokemons/1' },
    { text: 'Favorites', href: '/favorites' }
];

const currentPath = Astro.url;
console.log(currentPath);
---



<!-- component -->
<nav class="shadow dark:bg-slate-900">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
        <!-- {
            links.map(({href, text}) => (
                <a href={href} 
                class:list={[`hover:text-gray-800 dark:hover:text-gray-200 hover:border-blue-500 mx-1.5 sm:mx-6`,
                    {
                        'border-b-2 border-blue-500': currentPath.pathname === href,
                    }
                ]}
                    >
                    {text}
                </a>
            ))
        } -->
        {
            links.map(({href, text}) => (
                <div>
                <a href={href} 
                class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6"
                >
                    {text}
                </a>
                {
                    currentPath.pathname === href ? (
                        <div 
                        class="border-b-2 border-blue-500 mx-4"
                        transition:name="menu-line" />
                            
                    ): (
                        <div class="border-b-2 border-transparent" />
                    )
                }
                {/* <div class="border-b-2 border-blue-500 mx-4"> */}
                    
                </div>
            ))
        }
    </div>
</nav>